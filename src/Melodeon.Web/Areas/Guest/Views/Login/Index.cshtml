@model LoginModel

<section class="flex justify-center">
    <div class="card bg-base-300 w-96 shadow-xl">
        <form
            asp-area="Guest"
            asp-controller="Auth"
            asp-action="Login"
            method="post"
            class="card-body"
        >
            <h3 class="card-title mb-3">Guest Login</h3>

            <label class="input input-bordered flex items-center gap-2 mb-3">
                <i class="iconify tabler--user"></i>

                <input
                    asp-for="DisplayName"
                    class="grow"
                    placeholder="Display Name"
                >
            </label>

            <input
                type="hidden"
                asp-for="Code"
            >

            <div class="card-actions justify-end">
                <button
                    class="btn btn-primary"
                    type="submit"
                >
                    Submit
                </button>
            </div>
        </form>
    </div>
</section>
